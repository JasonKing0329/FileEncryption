<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:background="@color/spicture_backgroud"
	android:orientation="vertical">
	<include layout="@layout/actionbar"
	    android:id="@+id/actionbar"/>
	<ImageView 
	    android:id="@+id/rgame_private"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:visibility="gone"
	    android:background="@color/white"/>
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    
		    <ListView
		        android:id="@+id/rgame_chooser_portrait"
			    android:layout_width="@dimen/spicture_chooser_item_width"
			    android:layout_height="match_parent"
				android:background="@color/spicture_backgroud"
			    android:layout_alignParentRight="true"
		        />
		     
		     <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="match_parent" 
				    android:layout_toLeftOf="@id/rgame_chooser_portrait"
				    android:gravity="center"
		    		android:background="@color/spicture_backgroud"
		    		android:orientation="vertical">
			    	<include layout="@layout/random_game_content"/>
			 </LinearLayout>
	</RelativeLayout>
</LinearLayout>
