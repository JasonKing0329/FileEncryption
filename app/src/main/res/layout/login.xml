<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.king.app.fileencryption.FileEncryptLoginActivity" >
    <include layout="@layout/actionbar"/>
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/login_first_marginTop"
	    android:layout_marginLeft="@dimen/login_row_marginLeft"
    	android:orientation="horizontal">
        <TextView 
		    android:layout_width="@dimen/login_user_text_width"
		    android:layout_height="wrap_content"
		    android:text="@string/login_user"
            />
        <EditText 
            android:id = "@+id/login_edit_user"
		    android:layout_width="@dimen/login_user_edit_width"
		    android:layout_height="wrap_content"
		    android:inputType="text"
		    />
    </LinearLayout>
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/login_row_marginLeft"
    	android:orientation="horizontal">
        <TextView 
		    android:layout_width="@dimen/login_user_text_width"
		    android:layout_height="wrap_content"
		    android:text="@string/login_pwd"
            />
        <EditText 
            android:id = "@+id/login_edit_pwd"
		    android:layout_width="@dimen/login_user_edit_width"
		    android:layout_height="wrap_content"
		    android:inputType="textPassword"
		    />
    </LinearLayout>
    <Button 
        android:id = "@+id/login_button_ok"
	    android:layout_width="@dimen/login_ok_width"
	    android:layout_height="wrap_content"
	    android:text="@string/ok"
        />
    <Button 
        android:id = "@+id/login_button_fingerprint"
	    android:layout_width="@dimen/login_ok_width"
	    android:layout_height="wrap_content"
	    android:text="@string/login_fingerprint"
	    android:visibility="gone"
        />
    
</LinearLayout>

