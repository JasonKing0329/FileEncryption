<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<LinearLayout 
	    android:id="@+id/create_order_bottom"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:padding="10dp"
	    android:orientation="horizontal" >
	    <Button 
	        android:id="@+id/create_order_cancel"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
			android:layout_weight="0.5"
		    android:text="@string/cancel"/>
	    <Button 
	        android:id="@+id/create_order_ok"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
			android:layout_weight="0.5"
		    android:text="@string/ok"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_above="@id/create_order_bottom"
	    android:orientation="vertical" >
	    <Spinner 
	        android:id="@+id/create_order_tag"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:spinnerMode="dropdown"/>
	    <TextView 
	        android:id="@+id/create_order_notag"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:visibility="gone"/>
	    <EditText 
	        android:id="@+id/create_order_name"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
			android:inputType="text"/>
	    <Button 
	        android:id="@+id/create_order_new_tag"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:text="@string/sorder_new_tag"/>
	    <EditText 
	        android:id="@+id/create_order_new_tag_name"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
			android:inputType="text"
		    android:visibility="gone"/>
	    <CheckBox 
	        android:id="@+id/create_order_only_tag"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:text="@string/sorder_only_new_tag"/>
	
	</LinearLayout>
</RelativeLayout>