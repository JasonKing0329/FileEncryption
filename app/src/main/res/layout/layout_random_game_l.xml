<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:background="@color/spicture_backgroud"
	android:orientation="vertical">
	<include layout="@layout/actionbar_l"
	    android:id="@+id/actionbar"/>
	<ImageView 
	    android:id="@+id/rgame_private"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:visibility="gone"
	    android:background="@color/white"/>
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
		     
		    <com.king.app.fileencryption.publicview.HorizontalGallery
		        android:id="@+id/horizontalGallery"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentBottom="true"
				android:background="@color/transparent"/>
		     <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="match_parent" 
				    android:layout_above="@id/horizontalGallery"
				    android:gravity="center"
		    		android:background="@color/spicture_backgroud">
			    	<include layout="@layout/random_game_content"/>
			 </LinearLayout>
	</RelativeLayout>
</LinearLayout>
