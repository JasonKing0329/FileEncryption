<?xml version="1.0" encoding="utf-8"?>
<com.king.app.fileencryption.slidingmenu.SlidingMenuRight xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fe="http://schemas.android.com/apk/res/com.king.app.fileencryption"
    android:id="@+id/waterfall_slidingmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall_bk5"
    android:scrollbars="none"
    fe:leftPadding="@dimen/slidingmenu_rightpadding" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
	    <com.king.app.fileencryption.waterfall.LazyScrollView 
	        android:id="@+id/waterfallview"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"/>
        <LinearLayout 
            android:id="@+id/waterfall_menu_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
    		android:background="#0000"/>
    </LinearLayout>

</com.king.app.fileencryption.slidingmenu.SlidingMenuRight>
